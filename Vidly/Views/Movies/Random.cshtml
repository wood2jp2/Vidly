@model Vidly.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{ 
    var className = Model.Customers.Count > 0 ? "popularMovie" : null;
}

<h2 class="@className">List of Any Customers</h2>

@if (Model.Customers.Count == 0)
{
    <p>There are no customers that have rented this movie</p>
} else
{ 
    <ul>
        @foreach (var customer in Model.Customers)
        {
            <li>@customer.Name</li>
        }
    </ul>
}


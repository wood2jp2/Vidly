@model IEnumerable<Vidly.Models.Movie>

@{
    ViewBag.Title = "Movies";
}

<h2>@ViewBag.Title</h2>

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
            <tr>
                <td><@Html.ActionLink(movie.Name, "Details", "Movies", new { id = movie.Id }, null)></td>
                <td>@movie.Genre</td>
            </tr>
            }
            
        </tbody>
    </table>


